#!/bin/bash

# Function to perform install tasks
install_tasks() {
    
    npm install
    npm install axios@latest
    tsc index.ts
}

test_tasks() {
    echo "HI"
}

# Function to process the URL_FILE
process_url_file() {
    local url_file="$1"
    # Add your URL_FILE processing tasks here
}

# Function to run the project
run_project() {
    if [ -f "index.js" ]; then
        node index.js "$1"
    else
        tsc index.ts && node index.js "$1"
    fi
}

# Check for exactly 1 argument
if [ "$#" -ne 1 ]; then
    echo "Error: Exactly 1 argument is required."
    exit 1
fi

# Check if the argument is "install" or a URL_FILE
if [ "$1" = "install" ]; then
    install_tasks
elif ["$1" = "test"]; then
    test_tasks
else
    run_project "$1"  # Pass the argument to run_project
fi

exit 0