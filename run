#!/bin/bash

# Function to perform install tasks
install_tasks() {
    echo "Running install tasks..."
    
    npm install --save-dev @types/node
    npm install sync-request
    sudo npm install -g ts-node

    npm install @octokit/rest

}

# Function to process the URL_FILE
process_url_file() {
    local url_file="$1"
    echo "Processing URL file: $url_file"
    # Add your URL_FILE processing tasks here
}

# Check for exactly 1 argument
if [ "$#" -ne 1 ]; then
    echo "Error: Exactly 1 argument is required."
    exit 1
fi

# Check if the argument is "install" or a URL_FILE
if [ "$1" = "install" ]; then
    install_tasks
else
    process_url_file "$1"
fi

exit 0